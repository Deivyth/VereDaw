{% extends 'index.html.twig' %}

{% block body %}
<div class="col-4 mt-5">

	<form class="row" action="{{ path('login') }}" method="post">
		<input class="col-12 m-1" type="text" id="username" name="_username" value="{{last_username}}" placeholder="Email"/>
		<input class="col-12 m-1" type="password" id="password" name="_password" placeholder="Password"/>

		{% if error %}
			<div class="col-12">{{ error.messageKey|trans(error.messageData, "security")}}</div>
		{% endif %}
		<button class="btn btn-primary m-1 col-12" type="submit">Login</button>
		<a class="btn btn-primary m-1 col-12" href={{ path('registro') }}>Register</a>

	</form>
</div>

{% endblock %}
